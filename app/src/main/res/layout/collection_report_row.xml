<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:text="@string/customer_name"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:text="@string/customer_name"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp" />

        <TextView
        android:id="@+id/cusid_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textStyle="bold"
        android:text="@string/customer_number"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/customer_number"
            android:id="@+id/textView2"
            android:layout_column="0"
            android:layout_row="1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:text="@string/receipt_number"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/receipt_no_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:text="@string/receipt_number"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:text="@string/collection_date"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/collection_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="@string/customer_name"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="@string/amount"
            android:textStyle="bold"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/amount_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textStyle="bold"
            android:text="@string/customer_name"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_marginLeft="10dp" />
    </GridLayout>


</LinearLayout>