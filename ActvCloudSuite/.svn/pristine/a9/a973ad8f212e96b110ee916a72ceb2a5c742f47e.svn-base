@model IEnumerable<ActvMvcClient.Models.CompanyTable>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinancialYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartMonth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndMonth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyDetail.CompanyName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FinancialYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndMonth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyDetail.CompanyName)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID }) 
        </td>
    </tr>
}

</table>
